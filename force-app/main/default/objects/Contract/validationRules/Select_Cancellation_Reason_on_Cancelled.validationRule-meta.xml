<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Select_Cancellation_Reason_on_Cancelled</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Status, &quot;Cancelled&quot;), (ISBLANK( TEXT( Cancellation_Reason__c ) )))</errorConditionFormula>
    <errorDisplayField>Cancellation_Reason__c</errorDisplayField>
    <errorMessage>Please select a valid Cancellation Reason!</errorMessage>
</ValidationRule>
