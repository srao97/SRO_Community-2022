<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Select_Rejection_Reason_when_Rejected</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Status, &quot;Rejected&quot;), (ISBLANK( TEXT(Rejection_Reason__c) )))</errorConditionFormula>
    <errorDisplayField>Rejection_Reason__c</errorDisplayField>
    <errorMessage>Please select a valid Rejection Reason!</errorMessage>
</ValidationRule>
