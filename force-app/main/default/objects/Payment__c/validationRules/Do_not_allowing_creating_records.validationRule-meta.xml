<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Do_not_allowing_creating_records</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT( ByPassValidation__c ),  NOT($Profile.Name = &quot;System Administrator&quot;), ISNEW() )</errorConditionFormula>
    <errorMessage>Sorry, You cannot create a new payment record manually.</errorMessage>
</ValidationRule>
