<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Postal_Code_to_allow_only_Digits</fullName>
    <active>true</active>
    <errorConditionFormula>!REGEX(PersonMailingPostalCode,&quot;^[0-9]{4}&quot;) &amp;&amp; $RecordType.Name = &quot;Person Account&quot;</errorConditionFormula>
    <errorMessage>Please enter a valid Postal Code.</errorMessage>
</ValidationRule>
